generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id                 String              @id @default(cuid())
  email              String?             @unique
  passwordHash       String?
  firstName          String?
  lastName           String?
  avatar             String?
  bio                String?
  role               String              @default("mentee")
  isActive           Boolean             @default(true)
  createdAt          DateTime            @default(now())
  updatedAt          DateTime            @updatedAt
  emailVerified      DateTime?
  image              String?
  phone              String?
  accounts           Account[]
  activityLogs       ActivityLog[]
  attendances        Attendance[]
  availabilities     Availability[]
  feedbackGiven      Feedback[]          @relation("FeedbackFrom")
  feedbackReceived   Feedback[]          @relation("FeedbackTo")
  goalsCreated       Goal[]              @relation("GoalCreator")
  meetingsCreated    Meeting[]           @relation("MeetingCreator")
  minutesCreated     MeetingMinutes[]    @relation("MinutesAuthor")
  menteeProfile      MenteeProfile?
  mentorProfile      MentorProfile?
  mentorships        Mentorship[]        @relation("MentorUser")
  menteeships        MentorshipMentee[]
  notifications      Notification[]
  portfolios         Portfolio?
  resourcesUploaded  Resource[]
  sessionReflections SessionReflection[]
  slides             Slide[]             @relation("SlideCreator")
  assignedTickets    SupportTicket[]     @relation("TicketAssignee")
  ticketsCreated     SupportTicket[]     @relation("TicketCreator")
  ticketComments     TicketComment[]
  todoItems          TodoItem[]
  whiteboards        Whiteboard[]        @relation("WhiteboardCreator")
  wikiPages          WikiPage[]

  @@index([role])
  @@index([email])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model MentorProfile {
  id         String   @id @default(cuid())
  userId     String   @unique
  company    String?
  jobTitle   String?
  expertise  String?
  experience String?
  linkedIn   String?
  maxMentees Int      @default(6)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model MenteeProfile {
  id                    String    @id @default(cuid())
  userId                String    @unique
  studentId             String?
  major                 String?
  year                  Int?
  careerGoals           String?
  skills                String?
  strengths             String?
  weaknesses            String?
  currentChallenges     String?
  expectations          String?
  background            String?
  experience            String?
  endGoals              String?
  isOnboardingComplete  Boolean   @default(false)
  onboardingCompletedAt DateTime?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt
  personalNotes         String?
  startupIdeas          String?
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model ProgramCycle {
  id          String       @id @default(cuid())
  name        String
  description String?
  startDate   DateTime
  endDate     DateTime
  status      String       @default("active")
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  mentorships Mentorship[]
}

model Mentorship {
  id             String             @id @default(cuid())
  mentorId       String
  type           String             @default("one_on_one")
  status         String             @default("pending")
  programCycleId String
  startDate      DateTime
  endDate        DateTime
  maxMentees     Int                @default(1)
  notes          String?
  createdAt      DateTime           @default(now())
  updatedAt      DateTime           @updatedAt
  feedbacks      Feedback[]
  goals          Goal[]
  meetings       Meeting[]
  mentor         User               @relation("MentorUser", fields: [mentorId], references: [id])
  programCycle   ProgramCycle       @relation(fields: [programCycleId], references: [id])
  mentees        MentorshipMentee[]

  @@index([mentorId])
  @@index([programCycleId])
  @@index([status])
}

model MentorshipMentee {
  id           String     @id @default(cuid())
  mentorshipId String
  menteeId     String
  joinedAt     DateTime   @default(now())
  status       String     @default("active")
  mentee       User       @relation(fields: [menteeId], references: [id])
  mentorship   Mentorship @relation(fields: [mentorshipId], references: [id], onDelete: Cascade)

  @@unique([mentorshipId, menteeId])
  @@index([menteeId])
}

model Meeting {
  id                 String              @id @default(cuid())
  mentorshipId       String
  creatorId          String
  title              String
  description        String?
  type               String              @default("offline")
  meetingType        String              @default("session")
  scheduledAt        DateTime
  duration           Int                 @default(60)
  location           String?
  meetingUrl         String?
  status             String              @default("scheduled")
  qrToken            String?             @unique
  qrExpiresAt        DateTime?
  createdAt          DateTime            @default(now())
  updatedAt          DateTime            @updatedAt
  checkInCode        String?             @unique
  attendances        Attendance[]
  creator            User                @relation("MeetingCreator", fields: [creatorId], references: [id])
  mentorship         Mentorship          @relation(fields: [mentorshipId], references: [id])
  minutes            MeetingMinutes[]
  sessionReflections SessionReflection[]

  @@index([mentorshipId])
  @@index([scheduledAt])
  @@index([status])
}

model Attendance {
  id           String    @id @default(cuid())
  meetingId    String
  userId       String
  checkInTime  DateTime?
  checkOutTime DateTime?
  checkInLat   Float?
  checkInLng   Float?
  deviceHash   String?
  status       String    @default("absent")
  verifiedAt   DateTime?
  createdAt    DateTime  @default(now())
  meeting      Meeting   @relation(fields: [meetingId], references: [id], onDelete: Cascade)
  user         User      @relation(fields: [userId], references: [id])

  @@unique([meetingId, userId])
  @@index([userId])
}

model MeetingMinutes {
  id          String    @id @default(cuid())
  meetingId   String
  authorId    String
  agenda      String?
  keyPoints   String?
  actionItems String?
  outcome     String?
  attachments String?
  status      String    @default("draft")
  submittedAt DateTime?
  approvedAt  DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  author      User      @relation("MinutesAuthor", fields: [authorId], references: [id])
  meeting     Meeting   @relation(fields: [meetingId], references: [id], onDelete: Cascade)

  @@index([meetingId])
}

model Goal {
  id              String         @id @default(cuid())
  mentorshipId    String
  creatorId       String
  title           String
  description     String?
  category        String         @default("skill")
  targetValue     Int?
  currentValue    Int            @default(0)
  unit            String?
  status          String         @default("in_progress")
  priority        String         @default("medium")
  dueDate         DateTime?
  completedAt     DateTime?
  mentorConfirmed Boolean        @default(false)
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
  creator         User           @relation("GoalCreator", fields: [creatorId], references: [id])
  mentorship      Mentorship     @relation(fields: [mentorshipId], references: [id])
  progressNotes   ProgressNote[]
  subGoals        SubGoal[]

  @@index([mentorshipId])
  @@index([status])
}

model SubGoal {
  id           String   @id @default(cuid())
  goalId       String
  title        String
  weight       Int      @default(1)
  currentValue Int      @default(0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  goal         Goal     @relation(fields: [goalId], references: [id], onDelete: Cascade)

  @@index([goalId])
}

model ProgressNote {
  id        String   @id @default(cuid())
  goalId    String
  note      String
  value     Int?
  createdAt DateTime @default(now())
  goal      Goal     @relation(fields: [goalId], references: [id], onDelete: Cascade)

  @@index([goalId])
}

model Feedback {
  id            String     @id @default(cuid())
  mentorshipId  String
  fromUserId    String
  toUserId      String
  type          String     @default("session")
  rating        Int?
  communication Int?
  engagement    Int?
  content       String?
  strengths     String?
  improvements  String?
  isAnonymous   Boolean    @default(false)
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  fromUser      User       @relation("FeedbackFrom", fields: [fromUserId], references: [id])
  mentorship    Mentorship @relation(fields: [mentorshipId], references: [id])
  toUser        User       @relation("FeedbackTo", fields: [toUserId], references: [id])

  @@index([mentorshipId])
  @@index([fromUserId])
  @@index([toUserId])
}

model Resource {
  id           String   @id @default(cuid())
  title        String
  description  String?
  type         String   @default("file")
  fileUrl      String?
  linkUrl      String?
  fileName     String?
  fileSize     Int?
  mimeType     String?
  category     String?
  tags         String?
  visibility   String   @default("public")
  uploadedById String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  uploadedBy   User     @relation(fields: [uploadedById], references: [id])

  @@index([category])
  @@index([uploadedById])
}

model Portfolio {
  id                 String              @id @default(cuid())
  menteeId           String              @unique
  personalityMbti    String?
  personalityDisc    String?
  personalityHolland String?
  competencies       String?
  shortTermGoals     String?
  longTermGoals      String?
  createdAt          DateTime            @default(now())
  updatedAt          DateTime            @updatedAt
  challenges         String?
  personalNotes      String?
  startupIdeas       String?
  strengths          String?
  weaknesses         String?
  mentee             User                @relation(fields: [menteeId], references: [id])
  entries            PortfolioEntry[]
  snapshots          PortfolioSnapshot[]

  @@index([menteeId])
}

model PortfolioEntry {
  id          String    @id @default(cuid())
  portfolioId String
  title       String
  content     String
  type        String    @default("reflection")
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  portfolio   Portfolio @relation(fields: [portfolioId], references: [id], onDelete: Cascade)

  @@index([portfolioId])
}

model PortfolioSnapshot {
  id          String    @id @default(cuid())
  portfolioId String
  title       String
  data        String
  createdAt   DateTime  @default(now())
  portfolio   Portfolio @relation(fields: [portfolioId], references: [id], onDelete: Cascade)

  @@index([portfolioId])
}

model Availability {
  id        String   @id @default(cuid())
  userId    String
  dayOfWeek Int
  startTime String
  endTime   String
  duration  Int      @default(60)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Notification {
  id        String    @id @default(cuid())
  userId    String
  title     String
  message   String
  type      String    @default("info")
  link      String?
  isRead    Boolean   @default(false)
  readAt    DateTime?
  createdAt DateTime  @default(now())
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, isRead])
  @@index([createdAt])
}

model SessionReflection {
  id              String     @id @default(cuid())
  meetingId       String
  menteeId        String
  content         String?
  mentorConfirmed Boolean    @default(false)
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt
  meeting         Meeting    @relation(fields: [meetingId], references: [id], onDelete: Cascade)
  mentee          User       @relation(fields: [menteeId], references: [id], onDelete: Cascade)
  todoItems       TodoItem[]

  @@unique([meetingId, menteeId])
  @@index([menteeId])
}

model TodoItem {
  id                  String             @id @default(cuid())
  reflectionId        String?
  menteeId            String
  title               String
  status              String             @default("todo")
  priority            String             @default("medium")
  dueDate             DateTime?
  startDate           DateTime?
  column              String             @default("todo")
  labels              String?
  createdAt           DateTime           @default(now())
  updatedAt           DateTime           @updatedAt
  attachments         String?
  comments            String?
  description         String?
  checklist           String?
  completedPercentage Int                @default(0)
  actualCompletedAt   DateTime?
  actualStartDate     DateTime?
  mentee              User               @relation(fields: [menteeId], references: [id], onDelete: Cascade)
  reflection          SessionReflection? @relation(fields: [reflectionId], references: [id])

  @@index([menteeId])
  @@index([reflectionId])
}

model ActivityLog {
  id         String   @id @default(cuid())
  userId     String
  action     String
  entityId   String?
  entityType String?
  metadata   String?
  createdAt  DateTime @default(now())
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([createdAt])
}

model SupportTicket {
  id           String          @id @default(cuid())
  title        String
  description  String
  status       String          @default("open")
  priority     String          @default("medium")
  userId       String
  assignedToId String?
  createdAt    DateTime        @default(now())
  updatedAt    DateTime        @updatedAt
  assignedTo   User?           @relation("TicketAssignee", fields: [assignedToId], references: [id])
  user         User            @relation("TicketCreator", fields: [userId], references: [id])
  comments     TicketComment[]

  @@index([userId])
  @@index([status])
}

model TicketComment {
  id        String        @id @default(cuid())
  ticketId  String
  userId    String
  content   String
  createdAt DateTime      @default(now())
  ticket    SupportTicket @relation(fields: [ticketId], references: [id], onDelete: Cascade)
  user      User          @relation(fields: [userId], references: [id])

  @@index([ticketId])
}

model WikiPage {
  id         String   @id @default(cuid())
  title      String
  slug       String   @unique
  content    String?
  category   String?
  visibility String   @default("public")
  authorId   String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  author     User     @relation(fields: [authorId], references: [id])

  @@index([authorId])
  @@index([category])
}

model Whiteboard {
  id          String     @id @default(cuid())
  title       String
  description String?
  thumbnail   String?
  status      String     @default("private")
  creatorId   String
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  artboards   Artboard[]
  creator     User       @relation("WhiteboardCreator", fields: [creatorId], references: [id], onDelete: Cascade)

  @@index([creatorId])
  @@index([status])
}

model Artboard {
  id           String     @id @default(cuid())
  whiteboardId String
  order        Int        @default(0)
  name         String?
  elements     Json?
  appState     Json?
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  whiteboard   Whiteboard @relation(fields: [whiteboardId], references: [id], onDelete: Cascade)

  @@index([whiteboardId])
  @@index([order])
}

model Slide {
  id          String   @id @default(cuid())
  title       String
  description String?
  content     String?
  theme       String   @default("black")
  status      String   @default("private")
  creatorId   String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  creator     User     @relation("SlideCreator", fields: [creatorId], references: [id], onDelete: Cascade)

  @@index([creatorId])
}
